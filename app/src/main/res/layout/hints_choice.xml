<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="GET HINTS"
        android:id="@+id/hintTV"
        android:textColor="@color/textColor"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/tvvideohints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/videoHintsDes"
        android:textColor="@color/textColor"
        android:textSize="@dimen/content_text_size" />

    <Button
        android:id="@+id/bvideoHints"
        android:layout_width="@dimen/pack_width"
        android:layout_height="@dimen/pack_height"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_rounrect_flow3"
        android:text="View video"
        android:textColor="@color/textColor"
        android:textSize="@dimen/heading_text_size"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progress="25"/>

</LinearLayout>